{
    "DocLister":{
        "controller": "site_content",
        "api": [
            "id",
            "pagetitle",
            "published"
        ],
		"display":"200",
		"debug":"0",
        "showNoPublish" : 1,
        "idType":"documents",
		"orderBy":"pagetitle ASC"
    },
    "table": "site_content",
    "class": "modResource",
    "idField": "id",
    "docURL":{
        "edit":"index.php?a=27&id=",
        "new":"index.php?a=4&pid=5"
    },
	"docName":{
        "edit":"Клиент #",
        "new":"Новый клиент"
    },
    "parentField": "parent",
    "renameField": {
        "/^tv_(.*)$/": "1"
    },
    "rules":{
        "id" : "5"
    },
    "grid" : {
        "id" : {
            "name":"ID",
            "options": "field:'id',width:40"
        },
		"pagetitle":{
            "name": "Клиент",
            "options": "field:'pagetitle',width:600,align:'left',editor:{type:'validatebox',options:{required:true}}"
        },
		"published":{
            "name": "Опубликован",
            "options": "field:'published',width:100,align:'center',editor:{type:'checkbox',options:{on:'1',off:'0'}}"
        }
        
    }
}